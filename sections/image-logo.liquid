<section class="Section Section--spacingNormal" id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="image">
  {%- if section.settings.title != blank -%}
  <header class="SectionHeader SectionHeader--center features--heading-large">
    <div class="Container">
        <h3 class="SectionHeader__SubHeading Heading u-h1">{{section.settings.title}}</h3>
    </div>
  </header>
  {%- endif -%}

  {%- case section.settings.grid_per_col -%}
    {%- when '2' -%}
      {% assign grid_class = "Grid__Cell 1/2 1/2--phone" %}
    {%- when '3' -%}
      {% assign grid_class = "Grid__Cell 1/3 1/2--phone" %}
    {%- when '4' -%}
      {% assign grid_class = "Grid__Cell 1/4 1/2--phone" %}
    {%- when '6' -%}
      {% assign grid_class = "Grid__Cell 2/12 1/2--phone" %}
  {%- endcase -%}

  <div class="Container logo-container">
      {%- for block in section.blocks -%}

        {%- if forloop.first == true -%}
        <div class="Grid Grid--middle Grid_Logo">
        {%- endif -%}
          {% if block.settings.image != blank %}
            <div class="{{ grid_class }} Text--alignCenter">
              <div class="lc-content">
                <img src="{{ block.settings.image | img_url : 'x89' }}"  alt="{{ block.settings.image.alt }}">
              </div>
            </div>
          {% endif %}
        {%- if forloop.last == true -%}  
        </div>
        {%- endif -%}

      {%- endfor -%}
  </div>
</section>

<style>
  #section-{{ section.id }}{
  }

  @media screen and (max-width: 640px) {
    
  }
</style>

{% schema %}
{
  "name": "Image Logo",
  "class": "shopify-section--logo",
  "max_blocks": 10,
  "settings": [
    {
      "type": "select",
      "id": "grid_per_col",
      "label": "Items per Column",
      "options":[
        {
          "value":"2",
          "label": "2"
        },
        {
          "value":"3",
          "label": "3"
        },
        {
          "value":"4",
          "label": "4"
        },
        {
          "value":"6",
          "label": "6"
        }
      ],
      "default": "6"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Tell your story"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Item Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": ".jpg or .png image file"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Image Logo",
      "settings": {},
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}