{%- if section.settings.enable_bar -%}
  {%- unless section.settings.home_page_only and template != 'index' -%}
    <section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="announcement-bar">
      
      <div class="Grid Grid_Announcement hidden-phone">
        <div class="Grid__Cell 1/3--tablet-and-up">
          <div class="AnnouncementBar">
            <div class="AnnouncementBar__Wrapper">
              <p class="AnnouncementBar__Content">
                {% if section.settings.content != blank %}
                {%- if section.settings.link != blank -%}
                  <a href="{{ section.settings.link }}">{{ section.settings.content | escape }}</a>
                {%- else -%}
                  {{ section.settings.content | escape }}
                {%- endif -%}
                {%- endif -%}
              </p>
            </div>
          </div>
         </div>
         <div class="Grid__Cell 1/3--tablet-and-up">
          <div class="AnnouncementBar">
            <div class="AnnouncementBar__Wrapper">
              <p class="AnnouncementBar__Content">
                {%- if section.settings.link2 != blank  -%}
                  <a href="{{ section.settings.link2 }}">{{ section.settings.content2 | escape }}</a>
                {%- else -%}
                  {{ section.settings.content2 | escape }}
                {%- endif -%}
              </p>
            </div>
          </div>
         </div>
         <div class="Grid__Cell 1/3--tablet-and-up">
          <div class="AnnouncementBar">
            <div class="AnnouncementBar__Wrapper">
              <p class="AnnouncementBar__Content">
                {% if section.settings.content3 != blank %}
                {%- if section.settings.link3 != blank  -%}
                  <a href="{{ section.settings.link3 }}">{{ section.settings.content3 | escape }}</a>
                {%- else -%}
                  {{ section.settings.content3 | escape }}
                {%- endif -%}
                {%- endif -%}
              </p>
            </div>
          </div>
         </div>
      </div>
      
      <div class="hidden-tablet-and-up mobile-announcement">
        <div class="Grid_Announcement">
          
          
          <div class="mobile-view-item Grid__Cell_Ann fade">
            {%- if section.settings.link2 -%}
              <a href="{{ section.settings.link2 }}">{{ section.settings.content2 | escape }}</a>
            {%- else -%}
              {{ section.settings.content2 | escape }}
            {%- endif -%}
          </div>
          
          
        </div>
      </div>
    </section>

    <style>
      #section-{{ section.id }},
      #section-{{ section.id }} .AnnouncementBar{
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
      }
    </style>

    <script>
      document.documentElement.style.setProperty('--announcement-bar-height', document.getElementById('shopify-section-announcement').offsetHeight + 'px');
    </script>
  {%- endunless -%}
{%- endif -%}

{% schema %}
{
  "name": "Announcement bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable bar",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "home_page_only",
      "label": "Home page only",
      "default": false
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Top Bar 1"
    },
    {
      "type": "text",
      "id": "content",
      "label": "Text",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "header",
      "content": "Top Bar 2"
    },
    {
      "type": "text",
      "id": "content2",
      "label": "Text 2",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link2",
      "label": "Link 2"
    },
    {
      "type": "header",
      "content": "Top Bar 3"
    },
    {
      "type": "text",
      "id": "content3",
      "label": "Text 3",
      "default": "Announce something here"
    },
    {
      "type": "url",
      "id": "link3",
      "label": "Link 3"
    }
  ]
}
{% endschema %}